<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_mainContent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekbar_page"
        android:layout_marginBottom="25dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:id="@+id/textView_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white" />



    </androidx.core.widget.NestedScrollView>
    <SeekBar
        android:id="@+id/seekbar_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/linearLayout_pages"
        tools:targetApi="lollipop" />
    <LinearLayout
        android:id="@+id/linearLayout_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/back_to_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/page_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/pages_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Font"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp" />
                <Spinner
                    android:id="@+id/font_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aa"
                    android:textColor="@android:color/black"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <SeekBar
                    android:id="@+id/seekBar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:max="4"
                    android:layout_weight="1"
                    android:progress="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aa"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textSize="25sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Align"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.95"
                    android:layout_marginStart="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-20dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/align_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/format_align_left"
                        android:background="@drawable/button_selected"
                        tools:ignore="NestedWeights" />
                    <ImageButton
                        android:id="@+id/align_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/format_align_right"
                        android:layout_weight="1"
                        android:background="@drawable/button_selected"
                        />
                    <ImageButton
                        android:id="@+id/align_justify"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/format_align_justify"
                        android:background="@drawable/button_selected"
                        />
                    <ImageButton
                        android:id="@+id/align_center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/format_align_center"

                        android:background="@drawable/button_selected"
                        />


                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spacing"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_weight="0.4"
                android:layout_marginStart="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:layout_marginStart="-20dp">
            <ImageButton
                android:id="@+id/spacing_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/spacing1"
                android:background="@drawable/button_selected"
                tools:ignore="NestedWeights" />
            <ImageButton
                android:id="@+id/spacing_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/spacing2"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                />
            <ImageButton
                android:id="@+id/spacing_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/spacing3"
                android:background="@drawable/button_selected"
                />
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Margins"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_weight="0.4"
                    android:layout_marginStart="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-20dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:layout_marginStart="-20dp">
                    <ImageButton
                        android:id="@+id/margin_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="align_button_selection"
                        android:src="@drawable/spacing1"
                        android:background="@drawable/button_selected"
                        tools:ignore="NestedWeights" />
                    <ImageButton
                        android:id="@+id/margin_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/spacing2"
                        android:layout_weight="1"
                        android:background="@drawable/button_selected"
                        />
                    <ImageButton
                        android:id="@+id/margin_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/spacing3"
                        android:background="@drawable/button_selected"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modes"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_weight="0.4"
                    android:layout_marginStart="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-20dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:layout_marginStart="-20dp">
                    <Button
                        android:id="@+id/mode_dark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Aa"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/mode_dark"
                        tools:ignore="NestedWeights" />
                    <Button
                        android:id="@+id/mode_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Aa"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/mode_light" />
                    <Button
                        android:id="@+id/mode_warm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Aa"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/mode_warm" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
